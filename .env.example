# -------------------------------
# n8n + Koyeb + PostgreSQL config
# -------------------------------

# پایگاه‌داده خارجی PostgreSQL (مثال: Neon)
DB_TYPE=postgresdb
# کافی است connection string را قرار دهید؛ n8n مقادیر را از آن استخراج می‌کند.
# مثال:
DB_POSTGRESDB_CONNECTION_STRING=postgresql://neondb_owner:YOUR_PASSWORD@ep-noisy-morning-aghrk2ss-pooler.c-2.eu-central-1.aws.neon.tech/neondb?sslmode=require&channel_binding=require

# پیکربندی پایه URL و وبهوک‌ها
N8N_HOST=my-n8n.koyeb.app
N8N_PROTOCOL=https
N8N_PORT=5678
WEBHOOK_URL=https://my-n8n.koyeb.app

# امنیت و احراز هویت
N8N_ENCRYPTION_KEY=generate-a-long-random-string
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=choose-a-username
N8N_BASIC_AUTH_PASSWORD=choose-a-strong-password

# سایر تنظیمات پیشنهادی
GENERIC_TIMEZONE=Asia/Tehran
# EXECUTIONS_DATA_SAVE_ON_ERROR=all
# EXECUTIONS_DATA_PRUNE=true
# EXECUTIONS_DATA_MAX_AGE=168
